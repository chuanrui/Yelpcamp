<% include ../partials/header %>


<div class = "container">
        <h1 style = "text-align: center">Edit Comment Of <%=campground.name%></h1>
        <div class = "row" style = "width:20%; margin:30px auto;">
            <form action = "/campgrounds/<%=campground._id%>/comments/<%=comment._id%>?_method=PUT", method = POST>
                <div class = "form-group">
                    <input class = "form-control" type = "text" name = "comment[text]" value = <%=comment.text%>>
                </div>
                <!--<div class = "form-group">-->
                <!--    <input class = "form-control" type = "text" name = "comment[author]" placeholder = "author">-->
                <!--</div>-->
                <div class = "form-group">
                    <button class = "btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href = "/campgrounds">Go Back</a>
        </div>
</div>




